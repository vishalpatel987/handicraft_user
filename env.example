# User Panel Environment Variables
# Copy this file to .env and update the values

# API Configuration
VITE_API_BASE_URL=http://localhost:5175
VITE_BACKEND_URL=http://localhost:5175

# Frontend Configuration
VITE_FRONTEND_URL=http://localhost:5173

# WebSocket Configuration
VITE_SOCKET_URL=http://localhost:5175
VITE_SOCKET_RECONNECT_ATTEMPTS=5
VITE_SOCKET_RECONNECT_DELAY=1000
VITE_SOCKET_TIMEOUT=30000

# Contact Information
VITE_CONTACT_EMAIL=care@rikocraft.com

# Support System
VITE_SUPPORT_EMAIL=support@rikocraft.com
VITE_CHAT_ENABLED=true
VITE_NOTIFICATION_ENABLED=true

# Environment
VITE_NODE_ENV=development
VITE_DEBUG=false

# Authentication
VITE_TOKEN_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_IMAGES_PER_PRODUCT=4

# Validation
VITE_MIN_PRICE=0
VITE_MAX_DESCRIPTION_LENGTH=1000
VITE_MIN_NAME_LENGTH=3
VITE_MAX_NAME_LENGTH=100

# SEO Configuration
VITE_SITE_NAME=Riko Craft
VITE_SITE_DESCRIPTION=Handcrafted Jewelry & Artisan Products
VITE_SITE_KEYWORDS=handcrafted jewelry, artisan products, handmade items, Eastern Heritage

# Social Media
VITE_FACEBOOK_URL=https://facebook.com/rikocraft
VITE_INSTAGRAM_URL=https://instagram.com/rikocraft
VITE_TWITTER_URL=https://twitter.com/rikocraft
VITE_YOUTUBE_URL=https://youtube.com/rikocraft
VITE_LINKEDIN_URL=https://linkedin.com/company/rikocraft

# Business Information
VITE_COMPANY_NAME=Riko Enterprises
VITE_COMPANY_ADDRESS=Jamshedpur, Jharkhand, India
VITE_COMPANY_PHONE=+91-XXXXXXXXXX
VITE_COMPANY_WEBSITE=https://rikocraft.com

# Payment Configuration
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (for notifications)
VITE_EMAIL_SERVICE=gmail
VITE_EMAIL_USER=your_email@gmail.com
VITE_EMAIL_PASS=your_app_password

# SMS Configuration (optional)
VITE_SMS_ENABLED=false
VITE_SMS_PROVIDER=msg91
VITE_SMS_API_KEY=your_sms_api_key

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_FACEBOOK_PIXEL_ID=your_fb_pixel_id

# Feature Flags
VITE_ENABLE_BLOG=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_COMPARE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_ANNOUNCEMENTS=true

# Performance
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOADING=true
VITE_CACHE_DURATION=3600

# Security
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:5174
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_MAX=100
VITE_RATE_LIMIT_WINDOW=900000